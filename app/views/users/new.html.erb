<%= form_for @user do |f| %>
    <%= f.label :username , "Enter a username" %>
    <%= f.text_field :username %>
    <%= f.label :password , "Enter a password" %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation , "Enter confirmation again" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Create new account" %>
<% end %>