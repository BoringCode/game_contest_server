<% content_for :title, "Users" %>
<% if @users.empty? %>
    <header class="page-header">
      <h2>No Users</h2>
    </header>
<% else %>
  <header class="page-header">
    <h2>List of users (<%= pluralize(User.count, "users") %>):</h2>
  </header>
  <ul class="list-group">
  <% @users.each do |u| %>
    <li class="list-group-item">
      <%= link_to u.username, u %>
      <% if (logged_in? && current_user.admin? && !u.admin?) %> |
      <%= link_to "delete", u, class: "text-danger", method: :delete, data: { confirm: "Are you sure you want to delete #{u.username}?", disable_with: 'Deleting...' }%>
     <% end %>
    </li>
  <% end %>
  </ul>
<% end %>