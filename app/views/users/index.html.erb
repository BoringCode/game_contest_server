<% provide(:title, 'Users') %>
<% if @users.empty? %>
    <header>
      <h2>No Users</h2>
      <%= link_to "Create a new user", signup_path, class: "btn btn-green" %>
    </header>
<% else %>
  <header>
    <h2>List of users (<%= pluralize(User.count, "users") %>):</h2>
    <%= link_to "Create a new user", signup_path, class: "btn btn-green" %>
  </header>
  <ul class="list">
  <% @users.each do |u| %>
    <li>
      <%= link_to u.username, u %>
       <%= link_to "delete", u, class: "red", method: :delete, data: { confirm: "Are you sure you want to delete #{u.username}?", disable_with: 'Deleting...' }%>
    </li>
  <% end %>
  </ul>
<% end %>