<% provide(:title, 'Update user') %>
<header class="page-header">
  <h2>Edit <%= @user[:username] %></h2>
  <%= link_to "Back to user", @user, class: "btn btn-success" %>
</header>
<%= form_for @user, :action => "update", :method => :patch do |f| %>
  <%= render 'user_form', f:f %>
  <%= f.submit "Update account", class: "btn btn-success" %>
<% end %>