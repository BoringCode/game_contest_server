<% if @player.errors.any? %>
<div class="alert alert-danger">There are <%= @player.errors.count %> errors.</div>
<ul>
  <% @player.errors.full_messages.each do |msg| %>
  <li class="text-danger"><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="form-group">
   <%= f.label :name %>
   <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
   <%= f.label :description %>
   <%= f.text_field :description, class: "form-control" %>
</div>
<div class="form-group">
   <%= f.label :downloadable, "Allow others to download this player"  %>
   <%= f.check_box :downloadable, checked: false, class: "form-control" %>
</div>
<div class="form-group">
   <%= f.label :playable, "Allow others to compete against this player" %>
   <%= f.check_box :playable, checked: true, class: "form-control" %>
</div>
<div class="form-group">
   <%= f.label :upload, "Upload file" %>
   <%= f.file_field :upload, class: "form-control" %>
</div>